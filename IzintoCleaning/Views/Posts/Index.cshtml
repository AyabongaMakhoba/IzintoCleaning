@model IEnumerable<IzintoCleaning.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Admin.AdminName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service.SerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostClosingDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Admin.AdminName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Service.SerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostClosingDate)
        </td>
        @if (User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PostCode }) |
                @Html.ActionLink("Details", "Details", new { id = item.PostCode }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PostCode })
            </td>
        } 

    </tr>
}

</table>
