        @Html.LabelFor(model => model.AdminID, "Employee Added By", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AdminID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AdminID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SerCode, "Employee Works In", htmlAttributes: new { @class = "control-label col-md-2" })
