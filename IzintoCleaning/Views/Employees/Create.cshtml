    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Examine" name="btn1" class="btn btn-default" />
            <input type="submit" value="Confirm" name="btn1" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("View All Employees", "Index")
</div>
